{
  "manifest_version": 3,
  "name": "Pik",
  "version": "1.0",
  "description": "Capture, edit, and export images directly from your browser.",
  "action": {
    "default_title": "Pik",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service-worker.js"
  }
}
